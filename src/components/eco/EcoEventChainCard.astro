---
import '../../styles/global.css';

const { text } = Astro.props;
---
<div class="eco-event-chain-card">
    <h4 class="eco-event-chain-card__text">{text}</h4>
</div>

<style>
    .eco-event-chain-card {
        --card-width: 16.6rem;
        --card-height: 10rem;
        --text-width: 12.75rem;
    }

    .eco-event-chain-card {
        display: block;
        position: relative;
        width: var(--card-width);
        height: var(--card-height);
        border-radius: var(--border-radius);
        background-color: white;
        box-shadow: var(--box-shadow);
    }

    .eco-event-chain-card__text {
        display: inline-block;
        width: var(--text-width);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }
</style>
