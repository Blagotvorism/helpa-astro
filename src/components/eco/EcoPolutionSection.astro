---
import '../../styles/global.css';
import PolutionCard from '../GoalsCard.astro';
import RadialGradient from '../RadialGradient.astro';
---
<section class="eco_polutions">
    <div class="eco_polutions__container">
        <RadialGradient topPosition="1rem" leftPosition="43.75rem" />
        <div class="eco_polutions_text">
            <h2 class="eco_polutions__heading">
                Основными
                <span class="eco_polutions__heading-gradient">
                    областями загрязнения
                </span>
            </h2>
            <h3 class="eco_polutions__subheading">окружающей среды являются:</h3>
        </div>
        <div class="eco_polutions_cards">
            <PolutionCard goalsIcon='Air' goalsDescr='Воздух' />
            <PolutionCard goalsIcon='Water' goalsDescr='Вода' />
            <PolutionCard goalsIcon='Ground' goalsDescr='Почва' />
        </div>
    </div>
</section>

<style>
    .eco_polutions {
        position: relative;
        display: block;
        max-width: 100vw;
        height: 35.2rem;
    }

    .eco_polutions__container {
        display: block;
        width: var(--reduced-width);
        height: 25.8rem;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
    }

    .eco_polutions_text {
        display: inline-block;
        width: inherit;
    }

    .eco_polutions__heading {
        text-align: center;
        font-family: var(--font-lulo-bold);
        font-size: 3.125rem;
        margin-bottom: 1.25rem;
    }

    .eco_polutions__heading-gradient {
        background-color: var(--green);
        background-image: var(--gradient);
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent; 
        -moz-text-fill-color: transparent;
    }

    .eco_polutions__subheading {
        font-family: var(--font-inter);
        font-size: 1.25rem;
        margin-left: 2rem;
        margin-bottom: 5rem;
    }

    .eco_polutions_cards {
        display: flex;
        flex-direction: row;
        width: 52.2rem;
        justify-content: space-between;
    }
</style>