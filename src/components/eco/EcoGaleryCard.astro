---
import '../../styles/global.css';

const { cardImage, cardText, imgDescr, fontSize } = Astro.props;
---
<div class="galery-card__container">
    {cardImage && <img src={cardImage} alt={imgDescr} class="galery-card__img" loading="eager" />}
    {cardText && <p class="galery-card__text gradient_span">{cardText}</p>}
</div>

<style define:vars={{fontSize}}>
    .galery-card__container {
        --card-width: 22.5rem;
        --card-height: 12.8rem;
        --card-text-width: 15.25rem;
        --fontSizeSmall: var(--fontSize);
    }

    .galery-card__container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: var(--card-width);
        height: var(--card-height);
        border-radius: var(--border-radius);
        background-color: white;
        box-shadow: var(--box-shadow);
    }

    .galery-card__img {
        display: block;
        width: 100%;
        height: 100%;
        border-radius: var(--border-radius);
        object-fit: cover;
    }

    .galery-card__text {
        display: inline-block;
        width: var(--card-text-width);
        font-family: var(--font-inter);
        font-size: var(--fontSizeSmall);
    }

    @media (960px <= width < 1200px) {
        .galery-card__container {
            --card-width: 18.3125rem;
            --card-height: 10.3125rem;
            --card-text-width: 13rem;
            --fontSizeSmall: var(--fontSize);
        }
    }

    @media (640px <= width < 960px) {
        .galery-card__container {
            --card-width: 18.625rem;
            --card-height: 10.3125rem;
            --card-text-width: 12.5rem;
            --fontSizeSmall: var(--fontSize);
        }
    }

    @media (480px <= width < 640px) {
        .galery-card__container {
            --card-width: 13.125rem;
            --card-height: 6.875rem;
            --card-text-width: 9.0625rem;
            --fontSizeSmall: calc(var(--fontSize)*0.65);
        }
    }

    @media (320px <= width < 480px) {
        .galery-card__container {
            --card-width: 40.625vw;
            --card-height: 21.875vw;
            --card-text-width: 26.5625vw;
            --fontSizeSmall: calc(var(--fontSize)*0.4);
            --border-radius: 1rem;
        }
    }

    @media (380px <= width < 480px) {
        .galery-card__container {
            --fontSizeSmall: calc(var(--fontSize)*0.5);
        }
    }

    @media (320px <= width < 380px) {
        .galery-card__container {
            --fontSizeSmall: calc(var(--fontSize)*0.4);
        }
    }
</style>
