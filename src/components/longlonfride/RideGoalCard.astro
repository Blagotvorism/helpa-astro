---
import { Icon } from 'astro-icon/components';
import '../../styles/global.css';
const { iconName, cardText } = Astro.props;
---
<div class="card">
    <Icon name={iconName} class='logo'/>
    <p>{cardText}</p>
</div>

<style>
    .card {
        display: flex;
        flex-direction: column;
        text-align: center;
        width: 16.6rem;
        height: 13.625rem;
        border-radius: 1.875rem;
        justify-content: center;
        align-items: center;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
    }

    .logo {
        display: block;
        width: 2.8rem;
        height: 2.8rem;
        margin-bottom: 1.625rem;
    }

    p {
        display: block;
        width: 9rem;
        font-family: var(--font-inter);
        font-size: 1rem;
    }
</style>