---
import '../styles/global.css';
import { Image } from 'astro:assets';

interface Props {
    sloganBG?: string;
    sloganTitle: string;
    altText?: string;
}

const { sloganBG, sloganTitle, altText = '' } = Astro.props;
---
<div class="slogan-part">
    {sloganBG ? (
        <Image src={sloganBG} alt={altText} loading='eager' class='slogan-bg' />
    ) : (
        <div class="slogan-bgcolor"></div>
    )}
    <h1 class="slogan-title">{sloganTitle}</h1>
</div>

<style>
    .slogan-part {
        --slogan-width: calc(100vw / 3);
        --slogan-height: 37.5rem;
        --slogan-title-width: 18.5rem;
        --slogan-title-font-size: 2.25rem;
        --slogan-title-letter-spacing: 2px;
        --slogan-title-color: white;
    }

    .slogan-part {
        position: relative;
        display: block;
        width: var(--slogan-width);
        height: var(--slogan-height);
        text-align: center;
    }

    .slogan-bg,
    .slogan-bgcolor {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .slogan-bg {
        object-fit: cover;
    }

    .slogan-bgcolor {
        background: var(--gradient);
    }

    .slogan-title {
        position: absolute;
        color: var(--slogan-title-color);
        display: inline-block;
        font-family: var(--font-lulo-bold);
        font-size: var(--slogan-title-font-size);
        letter-spacing: var(--slogan-title-letter-spacing);
        width: var(--slogan-title-width);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>
