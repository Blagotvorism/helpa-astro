---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';
import '../../styles/global.css';
import Link from "../Link.astro";
import DoubleButton from './DoubleButton.svelte';

import blagotvorismImage from "../../images/blagotvorism.svg";

const {mainBackgroundImage, mainLogo, mainDescriptionTitle, mainDescriptionText, learnMoreButtonText} = Astro.props;
let showIcons = false;

function toggleButton () {
    showIcons = !showIcons;
}

---
<section class="astroway">
    <div class="main">
        <div class="headings-container">
            <Image src={blagotvorismImage} class="PrimaryImage" alt='Blagotrovism' loading="eager" decoding="async"/>
        </div>
        <div class="main_text">
            <div class="main-description">
                <h2 class="main-description-title">{mainDescriptionTitle}</h2>
                <p class="main-description-text">{mainDescriptionText}</p>
            </div>
        </div>
        <div class="main-cta">
            <!-- <Link href="/" theme='primary' classes="link link_primary" onClick={toggleButton}>Приобрести</Link> -->
            <DoubleButton locale={Astro.currentLocale || ""} client:load />
            <Link href="/token" theme='text' classes="link link_text"><span class="link-innertext-secondary">{learnMoreButtonText}</span><Icon name="arrowText" /></Link>
        </div>
    </div>
</section>

<style>

    .astroway {
        position: relative;
        background: #f5f5f5 url('../../images/main/main-background.png') center;
        background-size: cover;
        padding: 80px 0;
    }

    .PrimaryImage {
        display: block;
        margin: auto;
        width: 246px; height: auto;
        margin-bottom: 50px;
    }

    .main-description-title {
        color: black;
        font-size: 15px;
        margin-bottom: 10px;
    }

    .main-description-text {
        font-size: 10px;
        color: var(--dark-grey);
        margin-bottom: 20px;
    }

    .main_text {
        margin: 0 15px;
        display: block;
    }

    .main-cta {
        margin: 0 15px;
        top: 42.25rem;
        height: var(--cta-height);
        display: flex;
        align-items: center;
        gap: 10px;
        background: transparent;
    }

    .main-cta .split_btn {
        margin-right: 10px;
    }

    @media (width >= 480px) {
        .main {
            width: 440px;
            margin: auto;
        }
    }

    @media (width >= 640px) {

        .main {
            width: 619px;
        }

        .PrimaryImage {
            width: 428px;
        }

        .main-description-title {
            font-size: 37px;
        }

        .main-description-text {
            font-size: 12px;
            width: 50%;
        }
    }

    @media (width >= 960px) {

        .main {
            width: 862px;
        }

        .main-description-text {
            float: left;
        }

        .main-cta {
            float: right;
            margin-top: -10px;
        }
    }

    @media (width >= 1200px) {

        .astroway {
            padding-top: 100px;
        }

        .main {
            width: 1120px;
        }

        .PrimaryImage {
            width: 681px;
            margin-bottom: 80px;
        }

        .main-description-title {
            font-size: 32px;
            width: 80%;
            margin-bottom: 20px;
        }

        .main-description-text {
            float: none;
            font-size: 16px;
        }

        .main-cta {
            float: none;
            margin-top: 0;
        }
    }
</style>
