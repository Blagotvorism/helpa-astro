---
import '../../styles/global.css';

const {heading, text} = Astro.props;
---
<div class="card">
    <div class="text">
        <h3>{heading}</h3>
        <p>{text}</p>
    </div>
</div>

<style>
    .card {
        display: flex;
        width: 34.375rem;
        height: 16rem;
        border-radius: 1.875rem;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
        justify-content: center;
        align-items: center;
    }

    .text {
        display: block;
        max-height: 11.25rem;
        width: 28.4rem;
        font-family: var(--font-inter);
    }

    h3 {
        font-size: 1.3rem;
        margin-bottom: 1.25rem;
    }

    p {
        font-size: 1rem;
        color: var(--dark-grey);
    }


</style>