---
import '../../styles/global.css';
---
<section class="lowincome_hero">
    <div class="lowincome_hero__container">
        <h1 class="hero_heading">
            <span class="highlight" id="img_text">re</span>
        </h1>
        <h1 class="usual_text"><span class="white">pay</span></h1>
    </div>
</section>

<style>
    .lowincome_hero {
        position: relative;
        display: flex;
        width: 100vw;
        height: 45rem;
        justify-content: center;
        background: url(../../images/lowIncome/heroCover.jpg) no-repeat center center/cover;
        overflow: hidden;
    }

    .lowincome_hero__container {
        position: relative;
        width: 46.625rem;
        z-index: 1;
    }

    .hero_heading {
        position: relative;
        width: 100%;
        height: 9.8125rem;
        display: inline-block;
        overflow: hidden;
        white-space: nowrap;
        font-family: var(--font-lulo-bold);
        font-size: 9.8125rem;
        line-height: 9.8125rem;
        margin-top: 15.875rem;
        color: white;
    }

    .hero_heading .highlight {
        position: absolute;
        top: 0;
        left: 0;
        background: url('../../images/lowIncome/heroCover.jpg') no-repeat;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    #img_text {
        width: 1.8em; /* Adjust width to match the size of 'ECO' */
        background-position: 36% 50%; /* Center of the background image */
        background-size: 100vw 100vh; /* Cover entire viewport */
    }

    .usual_text {
        position: absolute;
        right: 0;
        top: 0;
        font-family: var(--font-lulo-bold);
        font-size: 9.8125rem;
        line-height: 9.8125rem;
        margin-top: 15.875rem;
        color: white;
    }

    .lowincome_hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 46.5%;
        height: 100%;
        background: white;
        z-index: 0;
    }
</style>