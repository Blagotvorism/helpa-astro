---
import '../styles/global.css';
import { Image } from 'astro:assets';
import imagesData from '../data/concepts.json';

interface Props {
    mainHeading: string;
    subHeading: string;
    text: string;
    pagePath: string;
}

const { mainHeading, subHeading, text, pagePath } = Astro.props;

let containerHeight;
let gap;
switch(pagePath) {
    case('eco'):
        containerHeight = '20rem';
        gap = '1.25rem';
        break;
    default:
        containerHeight = '20rem';
        gap = '1.25rem';
}
---
<section class="eco_concept">
    <div class="eco_concept__container" id="container">
        <div class="eco_concept__text">
            <h2 class="eco_concept__heading">{mainHeading}</h2>
            <h3 class="eco_concept__subheading">
                {subHeading}
            </h3>
            <p class="eco_concept__description">
                {text}
            </p>
        </div>
        <div class="eco_concept__images">
            <div class="eco_concept__images-1">
               {imagesData.map((image) => (
                    image.category === pagePath && 
                    image.imageNumber < 3 && 
                    <div class="eco_concept_img-1">
                        <Image src={import(image.imagePath)} alt={image.imageDescr} loading='eager' class='eco_concept-img-1'/>
                    </div>
               ))}
            </div>
            <div class="eco_concept__images-2">
                {imagesData.map((image) => (
                     image.category === pagePath && 
                     image.imageNumber === 3 && 
                     <div class="eco_concept_img-2">
                         <Image src={import(image.imagePath)} alt={image.imageDescr} loading='eager' class='eco_concept_img-2'/>
                     </div>
                ))}
             </div>
        </div>
    </div>
</section>

<style define:vars={{containerHeight, gap}}>
    .eco_concept {
        display: block;
        position: relative;
        width: 100vw;
        height: 25rem;
    }

    .eco_concept__container {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        width: var(--reduced-width);
        height: var(--containerHeight);
    }

    .eco_concept__text {
        display: inline-block;
        width: 37.5rem;
        height: inherit;
    }

    h2 {
        font-family: var(--font-lulo-bold);
        font-size: 3.125rem;
        line-height: 3.5rem;
        margin-bottom: 2.5rem;
        background-color: var(--green);
        background-image: var(--gradient);
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent; 
        -moz-text-fill-color: transparent;
    }

    h3 {
        display: inline-block;
        width: 34.6rem;
        font-family: var(--font-inter);
        font-size: 1.3rem;
        margin-bottom: 1.25rem;
    }

    p {
        font-family: var(--font-inter);
        font-size: 1rem;
        color: var(--dark-grey);
    }

    .eco_concept__images {
        display: flex;
        justify-content: space-between;
        width: 28.5rem;
        height: 18.875rem;
    }

    .eco_concept__images-1 {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-content: space-between;
        gap: var(--gap);
        width: 16.6rem;
        height: inherit;
        border-radius: 1.875rem;
    }

    .eco_concept_img-1 {
        display: block;
        width: inherit;
        height: 8.8rem;
        border-radius: inherit;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
    }

    .eco_concept-img-1 {
        display: block;
        width: inherit;
        height: inherit;
        border-radius: inherit;
    }

    .eco_concept__images-2 {
        display: block;
        width: 10.7rem;
        height: inherit;
        border-radius: 1.875rem;
    }

    .eco_concept_img-2 {
        display: block;
        width: inherit;
        height: inherit;
        border-radius: inherit;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
    }
</style>