---
import '../styles/global.css';
import { Image } from 'astro:assets';
import imagesData from '../data/concepts.json';

interface Props {
    mainHeading: string;
    usualHeading?: string;
    subHeading?: string;
    text: string;
    pagePath: string;
}

const { mainHeading, subHeading, text, pagePath, usualHeading } = Astro.props;

let containerHeight, sectionHeight, imgContainerHeight, topPosition;
let horizontalImgHeight;
let gap;
let fontSize, color;

switch(pagePath) {
    case('eco'):
        containerHeight = '20rem';
        gap = '1.25rem';
        fontSize = "1rem";
        color = "var(--dark-grey)";
        sectionHeight = "25rem";
        topPosition = "0rem";
        imgContainerHeight = '18.875rem';
        horizontalImgHeight = '8.8rem';
        break;
    case('low-income-families'):
        containerHeight = '21.875rem';
        fontSize = "1.5rem";
        color = "black";
        sectionHeight = "37.5rem";
        gap = '1.25rem';
        topPosition = "6.25rem";
        imgContainerHeight = '18.875rem';
        horizontalImgHeight = '8.8rem';
        break;
    case('longlongride'):
        containerHeight = '26.875rem';
        fontSize = "1rem";
        color = "var(--dark-grey)";
        sectionHeight = "38rem";
        gap = '1.25rem';
        topPosition = "6.25rem";
        imgContainerHeight = '25.5rem';
        horizontalImgHeight = '12.1rem';
        break;
    default:
        containerHeight = '20rem';
        gap = '1.25rem';
        sectionHeight = "25rem";
        imgContainerHeight = '18.875rem';
        fontSize = "1rem";
        color = "var(--dark-grey)";
        topPosition = "0rem";
        horizontalImgHeight = '8.8rem';
}
console.log(topPosition);
---
<section class="eco_concept">
    <div class="eco_concept__container" id="container">
        <div class="eco_concept__text">
            {usualHeading && <h2 class="eco_concept__heading">{usualHeading}<span>{mainHeading}</span></h2>}
            {!usualHeading && <h2 class="eco_concept__heading"><span>{mainHeading}</span></h2>}
            {subHeading && <h3 class="eco_concept__subheading">{subHeading}</h3>}
            <p class="eco_concept__description">
                {text}
            </p>
        </div>
        <div class="eco_concept__images">
            <div class="eco_concept__images-1">
               {imagesData.map((image) => (
                    image.category === pagePath && 
                    image.imageNumber < 3 && 
                    <div class="eco_concept_img-1">
                        <Image src={import(image.imagePath)} alt={image.imageDescr} loading='eager' class='eco_concept-img-1'/>
                    </div>
               ))}
            </div>
            <div class="eco_concept__images-2">
                {imagesData.map((image) => (
                     image.category === pagePath && 
                     image.imageNumber === 3 && 
                     <div class="eco_concept_img-2">
                         <Image src={import(image.imagePath)} alt={image.imageDescr} loading='eager' class='eco_concept_img-2'/>
                     </div>
                ))}
             </div>
        </div>
    </div>
</section>

<style define:vars={{containerHeight, gap, fontSize, color, sectionHeight, topPosition, imgContainerHeight, horizontalImgHeight}}>
    .eco_concept {
        display: block;
        position: relative;
        width: 100vw;
        height: var(--sectionHeight);
    }

    .eco_concept__container {
        position: absolute;
        top: var(--topPosition);
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        width: var(--reduced-width);
        height: var(--containerHeight);
    }

    .eco_concept__text {
        display: inline-block;
        width: 37.5rem;
        height: inherit;
    }

    h2 {
        font-family: var(--font-lulo-bold);
        font-size: 3.125rem;
        line-height: 3.5rem;
        margin-bottom: 2.5rem;
        color: black;
    }

    span {
        background-color: var(--green);
        background-image: var(--gradient);
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent; 
        -moz-text-fill-color: transparent;
    }

    h3 {
        display: inline-block;
        width: 34.6rem;
        font-family: var(--font-inter);
        font-size: 1.3rem;
        margin-bottom: 1.25rem;
    }

    p {
        font-family: var(--font-inter);
        font-size: var(--fontSize);
        color: var(--color);
    }

    img {
        object-fit: cover;
    }

    .eco_concept__images {
        display: flex;
        justify-content: space-between;
        width: 28.5rem;
        height: var(--imgContainerHeight);
    }

    .eco_concept__images-1 {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-content: space-between;
        gap: var(--gap);
        width: 16.6rem;
        height: inherit;
        border-radius: 1.875rem;
    }

    .eco_concept_img-1 {
        display: block;
        width: inherit;
        height: var(--horizontalImgHeight);
        border-radius: inherit;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
    }

    .eco_concept-img-1 {
        display: block;
        width: inherit;
        height: inherit;
        border-radius: inherit;
    }

    .eco_concept__images-2 {
        display: block;
        width: 10.7rem;
        height: inherit;
        border-radius: 1.875rem;
    }

    .eco_concept_img-2 {
        display: block;
        width: inherit;
        height: inherit;
        border-radius: inherit;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
    }
</style>