---
import { Icon } from 'astro-icon/components';
import '../styles/global.css';
import { Image } from 'astro:assets';
import ecoLogo from '../images/eco/ecoSocial.PNG';
import RadialGradient from './RadialGradient.astro';

const { page, tg_link ='/', yt_link = '/', inst_link = '/' } = Astro.props;
---
<section class="social">
    <div class="social__container">
        <div class="white-round">
            <RadialGradient topPosition="-8.9rem" leftPosition="-8.9rem" />
            {!page && <Icon name='mainLogoSocial' class='main-logo' />}
            {page && <Image src={ecoLogo} alt='Логотип проекта эко день' loading='eager' class="main-logo" />}
        </div>
        <div class="social__text">
            <h2 class="social__heading"><span class="gradient_span">Подписывайтесь</span> на наши социальные сети</h2>
            <h3 class="social__subheading">чтобы быть в курсе самых свежих новостей и предстоящих мероприятий</h3>
            <div class="social__logos">
                <a href={tg_link} aria-label="логотип телеграма"><Icon name='tgSocial' /></a>
                <a href={yt_link} aria-label="логотип ютуба"><Icon name='youtubeSocial' /></a>
                <a href={inst_link} aria-label="логотип IG"><Icon name='instSocial' /></a>
            </div>
        </div>
    </div>
</section>

<style>
    .social {
        --container-width: 68.25rem;
        --container-height: 33.125rem;
        --white-round-size: 17.875rem;
        --main-logo-size: 11.875rem;
        --text-width: 34.375rem;
        --text-height: 21.9rem;
        --heading-font-size: 3.125rem;
        --heading-line-height: 4rem;
        --subheading-font-size: 1.5rem;
        --logos-width: 15rem;
        --logos-height: 2.5rem;
        --logo-size: 2.5rem;
    }

    .social {
        position: relative;
        display: block;
        width: 100vw;
        height: 38.5rem;
    }

    .social__container {
        display: block;
        position: absolute;
        top: 3.375rem;
        left: calc((100vw - var(--full-width)) / 2 - 6.8rem);
        width: var(--container-width);
        height: var(--container-height);
    }

    .white-round {
        display: block;
        position: absolute;
        left: 9.375rem;
        top: 8.7rem;
        width: var(--white-round-size);
        height: var(--white-round-size);
        border-radius: 50%;
        background-color: white;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
    }

    .main-logo {
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: var(--main-logo-size);
        height: var(--main-logo-size);
    }

    .social__text {
        display: block;
        position: absolute;
        right: 0;
        top: 6.125rem;
        width: var(--text-width);
        height: var(--text-height);
    }

    h2 {
        font-family: var(--font-lulo-bold);
        font-size: var(--heading-font-size);
        line-height: var(--heading-line-height);
        margin-bottom: 1.25rem;
    }

    h3 {
        font-family: var(--font-inter);
        font-size: var(--subheading-font-size);
        margin-bottom: 2.5rem;
    }

    .social__logos {
        display: flex;
        width: var(--logos-width);
        height: var(--logos-height);
        justify-content: space-between;
        align-items: center;
    }

    .social__logos svg {
        height: var(--logo-size);
        width: var(--logo-size);
    }
</style>
