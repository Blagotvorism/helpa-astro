---
import '../../styles/global.css';
import TradingStrategy from '../token/TradingStrategy.astro';
---
<section class="trading">
    <div class="trading__container">
        <h2>наша торговая <span>стратегия</span></h2>
        <div class="strategy_nums">
            <TradingStrategy
                num="1"
                heading='Закрытый токенсейл'
                text='между людьми, активно принимающими участие в запуске проекта'
            />
            <TradingStrategy 
                num="2"
                heading='Открытый токенсейл'
                text='между людьми, активно принимающими участие в запуске проекта'
            />
            <TradingStrategy 
                num="3"
                heading='открытый токенсейл'
                text='между людьми, активно принимающими участие в запуске проекта'
            />
            <TradingStrategy 
                num="4"
                heading='Выход на биржи'
            />
        </div>
    </div>
</section>

<style>
    section {
        display: flex;
        justify-content: center;
        width: 100vw;
        height: 53.125rem;
    }

    .trading__container {
        display: block;
        width: var(--reduced-width);
        height: 43.75rem;
    }

    h2 {
        display: inline-block;
        font-family: var(--font-lulo-bold);
        font-size: 3.125rem;
    }

    span {
        background-color: var(--green);
        background-image: var(--gradient);
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent; 
        -moz-text-fill-color: transparent;
    }

    .strategy_nums {
        display: flex;
        justify-content: space-between;
        width: 100%;
        height: 40rem;
    }
</style>