---
import '../styles/global.css';
import { Icon } from 'astro-icon/components';

interface Props {
    goalsIcon?: string;
    goalsDescr: string;
    cardId?: number;
}

const {goalsIcon, goalsDescr, cardId} = Astro.props;
---

<div class="goals_card">
    <Icon name={goalsIcon} class="goals_icon"/>
    <p class:list={[cardId === 3 ? 'thirdCard goals_descr': 'goals_descr']}>{goalsDescr}</p>
</div>

<style>
    .goals_card {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 16.6rem;
        height: 13.625rem;
        border-radius: 1.875rem;
        background-color: white;
        box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.15);
    }

    .goals_icon {
        display: block;
        width: 2.5rem;
        height: 2.5rem;
        margin-top: 2.5rem;
        margin-bottom: 2.5rem;
        
    }

    .goals_descr {
        display: inline-block;
        font-family: var(--font-inter);
        font-size: 1rem;
        font-weight: 400;
    }

    .thirdCard {
        width: 12rem;
    }

</style>