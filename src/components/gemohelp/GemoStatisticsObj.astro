---
import { Image } from 'astro:assets';
import '../../styles/global.css';

interface Props {
    img?;
    altText?: string;
    imgDescr?: string;
    heading?: string;
    text?: string;
}

const { img, altText = '', imgDescr, heading, text } = Astro.props;
---
<div class="statistics_obj">
    {img && 
        <>
            <p class="img_descr">{imgDescr}</p>
            <Image src={img} alt={altText} loading='eager' class="img"/>
        </>
    }
    {!img && 
        <>
            <p class="heading">{heading}</p>
            <p class="text">{text}</p>
        </>
    }
</div>

<style>
    .statistics_obj {
        --statistics-obj-width: 21.5rem;
        --statistics-obj-height: 18.125rem;
        --statistics-obj-width-2nd-child: 16rem;
        --statistics-obj-width-5th-child: 16.5rem;
    }

    .statistics_obj {
        display: flex;
        flex-direction: column;
        width: var(--statistics-obj-width);
        height: var(--statistics-obj-height);
        font-family: var(--font-inter);
    }

    .img_descr {
        font-size: 1rem;
        color: var(--dark-grey);
        margin-bottom: 0.75rem;
    }

    .heading {
        font-size: 1.5rem;
        margin-bottom: 1.25rem;
    }

    .text {
        display: inline-block;
        font-size: 1rem;
        color: var(--dark-grey);
    }

    .statistics_obj:nth-child(2) {
        width: var(--statistics-obj-width-2nd-child);
    }

    .statistics_obj:nth-child(5) {
        width: var(--statistics-obj-width-5th-child);
    }
</style>
