---
import { Image } from 'astro:assets';
import BSCScanLogo from '../images/logos/BSCScan.png';
import coinMarketCapLogo from '../images/logos/CoinMarketCap.png';
import pancakeswapLogo from '../images/logos/pancakeswap.png';
import links from '../data/links.json';
import "../styles/global.css";
---
<footer>
    <div class="full-footer">
        <div class="footer-container">
            <div class="footer-links">
                {links.map(link => (
                    <a href={link.url} class="footer-link">{link.text}</a>
                ))}
            </div>
            <div class="footer-logos">
                <a href="https://coinmarketcap.com/dexscan/bsc/0x6f69dd5dbcb0ccbfce066f02761699945f7dc132/" class="footer-logo-link">
                    <Image src={coinMarketCapLogo} class="footer-logo" alt="CoinMarketCap Logo" loading="lazy" decoding="async" />
                </a>
                <div class="logo-link-container">
                    <a href="https://bscscan.com/token/0x6b8686bdf9dfe41790b0147d4096bf0c44b9c90f" class="footer-logo-link">
                        <Image src={BSCScanLogo} class="footer-logo" alt="BSCScan Logo" loading="lazy" decoding="async" />
                    </a>
                </div>
                <a href="https://pancakeswap.finance/" class="footer-logo-link">
                    <Image src={pancakeswapLogo} class="footer-logo" alt="PancakeSwap Logo" loading="lazy" decoding="async" />
                </a>
            </div>
        </div>
        <p class="cr">Â© 2024 Astroway</p>
    </div>
</footer>

<style>
    footer {
        --footer-width: 54.1875rem;
        --footer-height: 29.25rem;
        --footer-content-top: 8.1875rem;
        --footer-content-left: calc((100vw - var(--full-width)) / 2 + 8.1875rem);
        --footer-container-height: 10.125rem;
        --footer-links-width: 30.4375rem;
        --footer-links-gap: 3.1875rem;
        --footer-link-font-size: 1rem;
        --logo-container-border-radius: 1rem;
        --logo-width: 12.625rem;
        --logo-height: 2.5rem;
        --cr-margin-top: 4.4375rem;
    }

    footer {
        width: 100vw;
        height: var(--footer-height);
        background-color: black;
        color: var(--dark-grey);
        position: relative;
        text-align: center;
    }

    .full-footer {
        width: var(--footer-width);
        position: absolute;
        top: var(--footer-content-top);
        left: var(--footer-content-left);
    }

    .footer-container {
        display: flex;
        width: 100%;
        height: var(--footer-container-height);
        flex-direction: row;
        justify-content: space-between;
    }

    .footer-links {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        gap: var(--footer-links-gap);
        align-content: space-between;
        width: var(--footer-links-width);
    }

    .footer-link {
        align-self: flex-start;
        display: inline-block;
        font-family: var(--font-inter);
        font-size: var(--footer-link-font-size);
        color: var(--dark-grey);
        transition: color 0.3s;
    }

    .footer-link:active,
    .footer-link:hover {
        color: var(--light-grey);
    }

    .footer-logos {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .logo-link-container {
        display: block;
        background-color: white;
        border-radius: var(--logo-container-border-radius);
    }

    .footer-logo-link {
        display: inline-block;
        width: var(--logo-width);
        height: var(--logo-height);
    }

    .footer-logo {
        width: 100%;
        height: 100%;
    }

    .cr {
        margin-top: var(--cr-margin-top);
        font-family: var(--font-inter);
    }

    @media (960px <= width < 1200px) {
        footer {
            --footer-width: 45.3125rem;
            --footer-height: 26.6875rem;
            --footer-content-top: 6.25rem;
            --footer-content-left: calc((100vw - var(--reduced-width)) / 2 + 6.25rem);
            --footer-container-height: 10rem;
            --footer-links-width: 25rem;
            --footer-links-gap: 3.1rem;
            --footer-link-font-size: 1rem;
            --logo-container-border-radius: 1rem;
            --logo-width: 12.625rem;
            --logo-height: 2.5rem;
            --cr-margin-top: 4.4375rem;
        }
    }

    @media (640px <= width < 960px) {
        footer {
            --footer-width: 38.125rem;
            --footer-height: 25.75rem;
            --footer-content-top: 5.3125rem;
            --footer-content-left: 50%;
            --footer-container-height: 10rem;
            --footer-links-width: 23.625rem;
            --footer-links-gap: 3.5rem;
            --footer-link-font-size: 0.75rem;
            --logo-container-border-radius: 1rem;
            --logo-width: 11rem;
            --logo-height: 2.25rem;
            --cr-margin-top: 5rem;
        }

        .full-footer {
            transform: translateX(-50%);
        }
    }

    @media (480px <= width < 640px) {
        footer {
            --footer-width: 27.5rem;
            --footer-height: 13.875rem;
            --footer-content-top: 2.5rem;
            --footer-content-left: 50%;
            --footer-container-height: 5.625rem;
            --footer-links-width: 17.875rem;
            --footer-links-gap: 1.5rem;
            --footer-link-font-size: 0.625rem;
            --logo-container-border-radius: 1rem;
            --logo-width: 5.8125rem;
            --logo-height: 1.1rem;
            --cr-margin-top: 2.5rem;
        }

        .full-footer {
            transform: translateX(-50%);
        }
    }

    @media (320px <= width < 480px) {
        footer {
            --footer-width: 17.5rem;
            --footer-height: 16.25rem;
            --footer-content-top: 2.5rem;
            --footer-content-left: 50%;
            --footer-container-height: 7.9375rem;
            --footer-links-width: 17.5rem;
            --footer-links-gap: .9rem;
            --footer-link-font-size: 0.625rem;
            --logo-container-border-radius: 1rem;
            --logo-width: 5.375rem;
            --logo-height: 1.1rem;
            --cr-margin-top: 2.5rem;
        }

        .full-footer {
            transform: translateX(-50%);
            height: 11.25rem;
        }

        .footer-container {
            flex-direction: column;
        }

        .footer-links {
            height: 4.375rem;
        }

        .footer-logos {
            flex-direction: row;
            justify-content: space-between;
        }

        .logo-link-container {
            height: var(--logo-height);
        }
    }

</style>

