---
import Layout from '../layouts/Layout.astro';
import mainBackgroundImage from "../images/main/main-background.png";
import mainLogo from "../images/main/mainLogo.png";
import '../styles/global.css';
import AstrowaySection from '../components/main/AstrowaySection.astro';
import WelcomeSection from '../components/main/WelcomeSection.astro';
import AboutSection from '../components/main/AboutSection.astro';
import EventsSection from '../components/main/EventsSection.astro';
import IntroSection from '../components/IntroSection.astro';
import TokenSection from '../components/main/TokenSection.astro';
import GoalsSection from '../components/main/GoalsSection.astro';
import SlogansSection from '../components/main/SlogansSection.astro';

const {
	mainHeadingText = "Мы создали уникальный проект и сейчас покажем, как он работает",
	mainDescriptionTitle = "Первая благотворительная криптовалюта",
	mainDescriptionText = "Покупайте, продавайте, обменивайте криптовалюту и помогайте нашей планете и людям.",
	learnMoreButtonText = "Узнать подробнее"
} = Astro.props;

const mainPage = true;
---

<Layout title="ASTROWAY" mainPage={mainPage}>
	<main>
		<AstrowaySection mainBackgroundImage={mainBackgroundImage} mainLogo={mainLogo} mainDescriptionTitle={mainDescriptionTitle}
			mainDescriptionText={mainDescriptionText}  learnMoreButtonText={learnMoreButtonText} />
		<WelcomeSection locale={Astro.currentLocale} />
		<AboutSection locale={Astro.currentLocale} />
		<EventsSection locale={Astro.currentLocale} />
		<IntroSection 
			page="home"
			mainHeading={mainHeadingText}
			containerWidth='54.2rem' 
			containerHeight="12.2rem"
			/>
		<TokenSection />
		<GoalsSection />
		<SlogansSection />
	</main>
</Layout>

<style>
	main {
		position: relative;
		display: block;
		width: 100%;
		height: auto;
	}
</style>